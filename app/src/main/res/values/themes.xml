<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyLightTheme" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:colorBackground">@color/app_background</item>
        <item name="android:tabWidgetStyle">@style/LightTabWidget</item>
    </style>

    <style name="MyLightTheme.NoShadow">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="app_themetitle.Fullscreen" parent="app_themetitle">
        <item name="android:actionBarStyle">@style/Widget.app_themetitle.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SmartAdvisorPlus.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
