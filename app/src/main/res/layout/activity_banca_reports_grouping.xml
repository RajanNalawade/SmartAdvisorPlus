<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/reports_banner"
            android:orientation="vertical"
            android:weightSum="1" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2" >

            <LinearLayout android:id="@+id/llGroupTermInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/reportgridbg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton android:id="@+id/ibGroupTermInsurance"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="#f0f0f0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/groupterminsurancenewbusiness" />

                <TextView android:id="@+id/tvGroupTermInsurance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Group Term Insurance"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:id="@+id/llGroupRequirementUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/reportgridbg"
                android:gravity="center_horizontal"
                android:visibility="visible"
                android:orientation="vertical" >

                <ImageButton android:id="@+id/ib_group_requirement_upload"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="#f0f0f0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/group_requirement_upload_icon" />

                <TextView android:id="@+id/txt_group_requirement_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Requirement Upload"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2" >

            <LinearLayout android:id="@+id/llGroupFundBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/reportgridbg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton android:id="@+id/ibGroupFundBusiness"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="#f0f0f0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/group_fund_business_icon" />

                <TextView android:id="@+id/tvGroupFundBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Fund Business"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout android:id="@+id/llFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/reportgridbg"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageButton android:id="@+id/ibFeedback"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="#f0f0f0"
                    android:scaleType="fitCenter"
                    android:src="@drawable/group_feedback_icon" />

                <TextView android:id="@+id/tvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Grievances/Feedback/Queries"
                    android:textColor="#585858"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
</LinearLayout>