<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Proposal No.:"
            android:textColor="#808080"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/ETPremiumPaymentReceiptProposalNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_dob_shape"
            android:hint="Enter Your Proposal No."
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="15sp"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btnPremiumPaymentReceiptProposalNo"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/Common_blue"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@android:string/ok"
                android:textColor="#ffffff" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>
</LinearLayout>