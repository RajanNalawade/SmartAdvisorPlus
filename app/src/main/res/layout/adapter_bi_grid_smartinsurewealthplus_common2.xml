<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tr_header2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="34">


        <TextView
            android:id="@+id/tv_policy_year"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Policy Year"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_premium"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Annualized Premium  (AP)"
            android:textColor="@color/Black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_premium_allocation_charge"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Premium Allocation Charge (PAC)"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_annulized_premium_allocation_charge"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Annualized Premium - Premium Allocation Charge"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_mortality_charge1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Mortality Charge"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_service_tax_on_mortality_charge1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Applicable Taxes"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_policy_administration_charge"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:text="Policy Admin charge"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_guranteed_addition1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Guarantee charge"
            android:textColor="@color/Black"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_total_charge1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Other charges*"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/str_AddToTheFund4Pr"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Additions to the fund*"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_fund_before_fmc1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Fund before FMC"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_fund_management_charge1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="FMC"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_fund_value_at_end1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Fund at End of year"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_return_of_moratlity_charge1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Return of Moratlity Charge"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_surrender_value1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Surrender Value"
            android:textColor="@color/Black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_death_benefit1"
            style="@style/tv_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Death Benefit"
            android:textColor="@color/Black"
            android:textSize="14dp" />

    </TableRow>
</LinearLayout>
