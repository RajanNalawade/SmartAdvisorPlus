                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.5"
                        android:text="Policy Term" />

                    <EditText
                        android:id="@+id/edt_bi_smart_guaranteed_saving_plan_Actual_policyterm"
                        style="@style/et_default"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:inputType="number"
                        android:maxLength="50" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.5"
                        android:text="Income Plan" />

                    <Spinner
                        android:id="@+id/spnr_income_plan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/textboxbg"
                        android:padding="7dp"
                        android:popupBackground="@drawable/myspinner_border"
                        android:spinnerMode="dropdown"
                        android:textColor="#484848" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.5"
                        android:text="Annual Premium" />

                    <EditText
                        android:id="@+id/et_bi_smart_guaranteed_saving_plan_premium_amt"
                        style="@style/et_default"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:hint="Enter Amount"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="50" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0sp"
                        android:layout_weight="0.6"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            style="@style/tv_default"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wish to Backdate Policy "
                            android:textSize="@dimen/ts_small" />

                        <TextView
                            android:id="@+id/tv_mandatory_proposerdetail_personaldetail_backdating"
                            style="@style/tv_default"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:visibility="gone" />
                    </LinearLayout>

                    <RadioGroup
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/rb_shubh_nivesh_backdating_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/default_height"
                            android:text="Yes"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/ts_small"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/rb_shubh_nivesh_backdating_no"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/default_height"
                            android:text="No"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/ts_small"
                            android:textStyle="bold" />
                    </RadioGroup>
                </TableRow>

                <LinearLayout
                    android:id="@+id/ll_backdating1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="1">


                    <TableRow
                        style="@style/tr_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/tv_tableRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BackDating Date "
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/tv_mandatory_proposerdetail_personaldetail_backdatingdate"
                                style="@style/tv_default"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/Red"
                                android:visibility="gone" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/btn_shubh_nivesh_backdatingdate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/my_bordernew1"
                            android:drawableRight="@drawable/dt"
                            android:onClick="onClickBackDating"
                            android:padding="10dp"
                            android:text="Select Date"
                            android:textColor="#484848" />

                    </TableRow>

                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow_proceed_shubhNivesh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn_bi_smart_guaranteed_saving_plan_btnback"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.48"
                        android:background="@color/Common_blue"
                        android:padding="5dp"
                        android:text="Back"
                        android:textColor="#ffffff" />

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="0.04" />

                    <Button
                        android:id="@+id/btn_bi_smart_guaranteed_saving_plan_btnSubmit"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.48"
                        android:background="@color/Common_blue"
                        android:padding="5dp"
                        android:text="Proceed"
                        android:textColor="#ffffff" />
                </TableRow>

            </TableLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>
