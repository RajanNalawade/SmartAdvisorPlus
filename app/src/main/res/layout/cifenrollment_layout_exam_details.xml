                </LinearLayout>

                <EditText
                    android:id="@+id/edt_city"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
