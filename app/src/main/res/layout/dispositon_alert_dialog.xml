<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_update_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected_btn_background"
            android:gravity="center_vertical|center_horizontal"
            android:text="Update Remark"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/btn_view_remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selected_btn_background"
            android:gravity="center_vertical|center_horizontal"
            android:text="View Remark"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_update_remark_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <Spinner
            android:id="@+id/spinner_disposition"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <Spinner
            android:id="@+id/spinner_subdisposition"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edt_disposition_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="6"
            android:hint="Enter Remark"
            android:gravity="left"
            android:padding="6dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background_with_border"
            />
        <Button
            android:id="@+id/btn_submit_disposition_remark"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:ems="7"
            android:layout_gravity="center_horizontal"
            android:background="@color/Common_blue"
            android:enabled="true"
            android:text="Submit"
            android:visibility="gone"
            android:textColor="@color/White"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_view_remark_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_sbi_life_remark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_background_with_border"
            android:enabled="true"
            android:text="SBI Life Remark"
            android:textColor="@color/DarkGreySolid"/>
        <Button
            android:id="@+id/btn_call_center_remark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_background_with_border"
            android:enabled="true"
            android:text="Call Center Remark"
            android:textColor="@color/DarkGreySolid"/>

        <LinearLayout
            android:id="@+id/llCallCenterRemarks"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_renewal_remarks"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/Common_blue"
                android:text="Renewal"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/btn_revival_remarks"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@color/Common_blue"
                android:text="Revival"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/white" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_sales_remark"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_background_with_border"
            android:enabled="true"
            android:text="Sales Remark"
            android:textColor="@color/DarkGreySolid"/>
    </LinearLayout>

</LinearLayout>