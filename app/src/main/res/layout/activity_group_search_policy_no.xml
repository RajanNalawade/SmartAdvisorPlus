<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Policy Number"
        android:inputType="number"
        android:textColor="#808080"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtGroupPolicySearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_bordernew1"
            android:inputType="number"
            android:hint="Enter Policy Number"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#484848"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGroupPolicySearchOk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Common_blue"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:text="@android:string/ok"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnGroupPolicySearchReset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/Common_blue"
                android:padding="5dp"
                android:text="Reset"
                android:textColor="#ffffff" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtGroupPolicySearchMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvGroupPolicySearchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>