<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:overScrollMode="always" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TableLayout
                android:id="@+id/tblsearchholead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape2"
                android:visibility="gone" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Search by"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spsrholead"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/bgspinner"
                        android:entries="@array/selfleadsearch"
                        android:popupBackground="@drawable/myspinner_border"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/btnsrrefrholead"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Refresh"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblsrholddate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Lead From Date"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/edsrholeadfdate"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape"
                            android:editable="false"
                            android:hint="From Date"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="19sp" >
                        </EditText>

                        <ImageButton
                            android:id="@+id/imgbtnsrholeadfdate"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/dt" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Lead To Date"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/edsrholeadtdate"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape"
                            android:editable="false"
                            android:hint="to date"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="19sp" >
                        </EditText>

                        <ImageButton
                            android:id="@+id/imgbtnsrholeadtdate"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/dt" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnsrsearchholeaddate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblsrholdfolwdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Follow up From Date"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/edsrhofolfdate"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape"
                            android:editable="false"
                            android:hint="from date"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="19sp" >
                        </EditText>

                        <ImageButton
                            android:id="@+id/imgbtnsrhofolfdate"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/dt" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Follow up To Date"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/edsrhofoltdate"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape"
                            android:editable="false"
                            android:hint="to date"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textSize="19sp" >
                        </EditText>

                        <ImageButton
                            android:id="@+id/imgbtnsrhofoltdate"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/dt" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnsrsearchhofoldate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblsrholdpri"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Lead Priority"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spsrholeadpriority"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/bgspinner"
                        android:entries="@array/holeadpriority"
                        android:popupBackground="@drawable/myspinner_border"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/btnsrsearchholeadpr"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblsrholdsts"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Lead Status"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spsrholeadstatus"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@drawable/bgspinner"
                        android:entries="@array/selfleadstatus"
                        android:popupBackground="@drawable/myspinner_border"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/btnsrsearchholeadstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/tblsrholdno"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Lead No"
                        android:textColor="#000000"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edsrsearchholeadno"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="19sp" />

                    <Button
                        android:id="@+id/btnsrsearchholeadno"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_indicator"
                        android:text="Search"
                        android:textColor="#ffffff"
                        android:textSize="19sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:layout_marginTop="4dp" >

                    <TextView
                        android:id="@+id/txtholeadcount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </ScrollView>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header" >

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Lead Date: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:id="@+id/vertical_bar"
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Lead No: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Customer ID: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Customer Name: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Lead Priority: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Lead Status: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#000000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:text="Sync Status: "
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/lvholead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="#b5b5b5"
            android:dividerHeight="1dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:background="#000000" />

    </LinearLayout>
</LinearLayout>
