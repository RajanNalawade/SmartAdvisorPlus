<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:stretchColumns="1" >

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_prospectName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Customer Name   "
                android:textColor="#000000"
                android:layout_weight="0.4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_proposername"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:text="sfsdf"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="URN  "
                android:textColor="#000000"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_uin_no"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:text="sfsfasf"
                android:layout_height="wrap_content"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Plan Selected   "
                android:textColor="#000000"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plan_selected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="asfasf"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:text="Quotation No "
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_quotation_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="d"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Created Date "
                android:textColor="#000000"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_proposal_date"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:text="asfsf"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mobile No"
                android:textColor="#000000"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_proposer_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="asdsd"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"> 

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email ID  "
                android:layout_weight=".4"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_proposer_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Child Plan"
                android:layout_weight=".6"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sync Status  "
                android:textColor="#000000"
                android:layout_weight=".4"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sync_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Child Plan"
                android:layout_weight=".6"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Group  "
                android:layout_weight=".4"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="Child Plan"
                android:textColor="#000000" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Trasaction Mode  "
                android:layout_weight=".4"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewTransactionMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="Child Plan"
                android:textColor="#000000" />
        </TableRow>
    </TableLayout>

</LinearLayout>