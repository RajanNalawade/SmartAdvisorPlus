<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/cifenrollment_pf_activity_title"
        android:layout_alignParentTop="true"/>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/LightGrey_header">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Personal"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:focusable="true"
                android:background="@color/GreenYellow"
                android:focusableInTouchMode="true"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Occupation"
                android:background="@color/GreenYellow"
                android:textStyle="bold"
                android:padding="10dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Nomination"
                android:background="@color/GreenYellow"
                android:textStyle="bold"
                android:padding="10dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Bank"
                android:background="@color/GreenYellow"
                android:textStyle="bold"
                android:padding="10dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Form 1-A"
                android:background="@color/Common_blue"
                android:textStyle="bold"
                android:padding="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <requestFocus/>
            </TextView>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Exam And Training"
                android:textStyle="bold"
                android:padding="10dp">
            </TextView>

            <!--<View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="BSM Interview"
                android:textStyle="bold"
                android:padding="10dp">
            </TextView>-->

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Terms And Conditions"
                android:textStyle="bold"
                android:padding="10dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/tv_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Form 1-A"
                android:textColor="@color/Blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Following additional information is required to complete Form 1-A"
                android:textColor="@color/Black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Furnish the details of any insurance agency in force or  ever hold by  the Applicant *"
                    android:textColor="@color/Black" />

                <Spinner
                    android:id="@+id/spnr_aob_form1a_any_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/textboxbg"
                    android:textColor="#484848" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_aob_form1a_any_insurance_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Name of the Insurer *"
                        android:textColor="@color/Black" />

                    <EditText
                        android:id="@+id/edt_aob_form1a_insurance_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:hint="Enter Name of the Insurer"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:textColor="#484848"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Agency code Number *"
                        android:textColor="@color/Black" />

                    <EditText
                        android:id="@+id/edt_aob_form1a_insurance_agency_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:hint="Enter URN"
                        android:inputType="textCapCharacters"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:textColor="#484848"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Date of Appointment as  agent *"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/txt_aob_form1a_doa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:drawableRight="@drawable/dt"
                        android:padding="10dp"
                        android:textColor="#484848" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Date of cessation of Agency"
                        android:textColor="@color/Black" />

                    <TextView
                        android:id="@+id/txt_aob_form1a_doc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:drawableRight="@drawable/dt"
                        android:padding="10dp"
                        android:textColor="#484848" />

                </LinearLayout>

                <LinearLayout android:id="@+id/ll_aob_form1a_insurance_reason_for_cess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Reason for cessation  of agency *"
                        android:textColor="@color/Black" />

                    <EditText
                        android:id="@+id/edt_aob_form1a_insurance_reason_for_cess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:hint="Enter Reason for cessation  of agency"
                        android:inputType="textCapSentences"
                        android:maxLength="100"
                        android:padding="10dp"
                        android:textColor="#484848"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button android:id="@+id/btn_aob_form1a_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/btn_rounded_green"
                    android:textStyle="bold"
                    android:text="Back"/>

                <Button android:id="@+id/btn_aob_form1a_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_rounded_green"
                    android:textStyle="bold"
                    android:text="Next"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
