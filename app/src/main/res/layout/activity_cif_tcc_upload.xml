<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/cifenrollment_pf_activity_title"
        android:layout_alignParentTop="true"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/tv_default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TCC Documents Upload"
                android:textColor="@color/Blue"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/Black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Training Start Date *"/>

                    <TextView android:id="@+id/txt_tcc_training_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:padding="10dp"
                        android:textColor="#484848"
                        android:textColorHint="#2b5988"
                        android:drawableRight="@drawable/dt"
                        android:layout_weight="1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Training End Date *"/>

                    <TextView android:id="@+id/txt_tcc_training_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:padding="10dp"
                        android:textColor="#484848"
                        android:textColorHint="#2b5988"
                        android:drawableRight="@drawable/dt"
                        android:layout_weight="1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/tv_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No. of hours Training Completed *"/>

                    <EditText android:id="@+id/edt_no_hrs_training"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_bordernew1"
                        android:padding="10dp"
                        android:inputType="number"
                        android:textColor="#484848"
                        android:layout_weight="1"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText android:id="@+id/edt_cif_tcc_exam_urn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/my_bordernew1"
                        android:hint="Enter URN Number"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:textColor="#484848"
                        android:layout_weight="1"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/ib_cif_tcc_docs_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/White"
                        android:layout_gravity="center"
                        android:src="@drawable/preview" />


                    <ImageButton android:id="@+id/imgbtn_tcc_camera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1.5"
                        android:layout_gravity="center"
                        android:background="@color/White"
                        android:src="@drawable/ibtn_camera" />

                    <ImageButton android:id="@+id/imgbtn_tcc_browse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1.5"
                        android:background="@color/White"
                        android:clickable="true"
                        android:src="@drawable/ibtn_browsedoc" />

                    <ImageButton android:id="@+id/imgbtn_tcc_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1.5"
                        android:background="@color/White"
                        android:clickable="true"
                        android:src="@drawable/ibtn_uploaddoc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/Black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <Button android:id="@+id/btn_cif_tcc_exam_urn_ok"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/Common_blue"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:text="Next"
                        android:textColor="#ffffff" />

                    <Button android:id="@+id/btn_cif_tcc_exam_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/Common_blue"
                        android:layout_weight="1"
                        android:text="Dashboard"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Black" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>