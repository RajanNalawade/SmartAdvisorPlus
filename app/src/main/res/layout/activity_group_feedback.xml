<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <Spinner
        android:id="@+id/spnr_feedback_main_type"
        style="@style/spnr_default"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spnr_feedback_sub_type"
        style="@style/spnr_default"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/edt_feedback_policy_no"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:inputType="number"
        android:background="@drawable/edittext_dob_shape"
        android:textColor="#000000"
        android:hint="Enter Policy Number"
        android:textSize="15sp"/>

    <EditText android:id="@+id/edt_main_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/edittext_dob_shape"
        android:textColor="#000000"
        android:lines="6"
        android:hint="Enter Grievances / Feedback / Queries"
        android:textSize="15sp"/>

    <Button android:id="@+id/btn_feedback_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Common_blue"
        android:padding="10dp"
        android:layout_gravity="center"
        android:text="@android:string/ok"
        android:textColor="#ffffff" />

</LinearLayout>
</LinearLayout>