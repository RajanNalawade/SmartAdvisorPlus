<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_product_exp_vid1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Must Say Video English"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_product_exp_vid2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Must Say Video Hindi"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_product_exp_vid3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Poorn Suraksha"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewUserManual"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="User Manual"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewProtectionExplainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Protection Explainer"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSmartSamadhanSimulations"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Smart Samadhan Simulations"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSmartSamadhanExplainer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rectangle"
                android:gravity="center"
                android:text="Smart Samadhan Explainer"
                android:textColor="@color/Common_blue"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
