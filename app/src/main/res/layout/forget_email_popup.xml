<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray_lutech_collection_sidebar_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/Black" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#2183b0" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:padding="5dp"
                android:src="@drawable/sbilogo" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/Black" />

        <TableRow
            android:id="@+id/tr_CIF_Code"
            style="@style/tr_default"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1" >

            <EditText
                android:id="@+id/edt_cif_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@layout/usernametextbox001"
                android:hint="Please enter your CIF Code"
                android:inputType="number"
                android:textColor="@color/Black"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:id="@+id/tr_email_declaratin"
            style="@style/tr_default"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_color"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="# By clicking on the &apos;Submit&apos; button, you agree to receive a report through an E-mail communication from SBI Life insurance Company Limited"
                android:textColor="@color/DarkBlue"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            style="@style/tr_default"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1" >

            <EditText
                android:id="@+id/edt_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@layout/usernametextbox001"
                android:hint="Please enter your Email Address"
                android:inputType="textEmailAddress"
                android:textColor="@color/Black"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/Black" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:weightSum="1" >

            <Button
                android:id="@+id/btn_submit"
                style="@style/btn_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:background="@drawable/btn_selector"
                android:text="Submit" >
            </Button>

            <Button
                android:id="@+id/btn_cancel"
                style="@style/btn_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".50"
                android:background="@drawable/btn_selector"
                android:text="Exit" >
            </Button>
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/Black" />
    </LinearLayout>

</ScrollView>