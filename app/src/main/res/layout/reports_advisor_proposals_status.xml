<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lnChannelProposerTrackerList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_margin="5dp" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical" >

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="From Date"
                                android:textColor="#808080"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/editTextFromdateChannelProposerTracker"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/edittext_dob_shape"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="#000000"
                                    android:textSize="15sp" >
                                </EditText>

                                <ImageButton
                                    android:id="@+id/btnFromDateChannelProposerTrackerList"
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:contentDescription="@string/contentDescDOB"
                                    android:src="@drawable/dt" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="To Date"
                                android:textColor="#808080"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/editTextToDateChannelProposerTracker"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_centerVertical="true"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/edittext_dob_shape"
                                    android:editable="false"
                                    android:focusable="false"
                                    android:inputType="text"
                                    android:singleLine="true"
                                    android:textColor="#000000"
                                    android:textSize="15sp" >
                                </EditText>

                                <ImageButton
                                    android:id="@+id/btnToDateChannelProposerTrackerList"
                                    android:layout_width="30dp"
                                    android:layout_height="25dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:contentDescription="@string/contentDescDOB"
                                    android:src="@drawable/dt" />
                            </RelativeLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow android:layout_marginTop="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Status"
                            android:textColor="#808080"
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:layout_margin="5dp" >

                        <Spinner
                            android:id="@+id/spinnerChannelProposerTrackerList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="5dp"
                            android:background="@drawable/textboxbg"
                            android:entries="@array/channelProposerTrackerListArray"
                            android:popupBackground="@drawable/myspinner_border"
                            android:spinnerMode="dropdown"
                            android:textColor="#484848" >
                        </Spinner>
                    </TableRow>

                    <TableRow
                        android:layout_marginTop="5dp"
                        android:weightSum="1"
                        android:paddingBottom="5dp" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/btnOkChannelProposerList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/Common_blue"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:text="@android:string/ok"
                                    android:textColor="#ffffff" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <Button
                                    android:id="@+id/btnResetChannelProposerList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/Common_blue"
                                    android:text="Reset"
                                    android:paddingTop="5dp"
                                    android:layout_marginLeft="2dp"
                                    android:paddingBottom="5dp"
                                    android:textColor="#ffffff" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

                <ListView
                    android:id="@+id/listViewChannelProposerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#b5b5b5"
                    android:layout_margin="5dp"
                    android:dividerHeight="1dp" >
                </ListView>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
