<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        >             
    
        <TableRow >
             <TextView       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Customer DOB"
            android:textSize="13sp"
            android:textColor="@android:color/black"   
            android:layout_weight="0.5"    	 	        
         />

 <TextView
        android:id="@+id/txtcustdob"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:gravity="left"
            android:textSize="13sp"
            android:textColor="@android:color/black"       	 	        
        	android:layout_weight="0.5"
         />
 
  </TableRow>

 <TableRow >
             <TextView       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Customer Contact No."
            android:textSize="13sp"
            android:textColor="@android:color/black"   
            android:layout_weight="0.5"    	 	        
         />

 <TextView
        android:id="@+id/txtcustconno"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:gravity="left"
            android:textSize="13sp"
            android:textColor="@android:color/black"       	 	        
        	android:layout_weight="0.5"
         />
 
 <ImageView
        android:id="@+id/imgcontact_c"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:gravity="left"                           	 	       
        	android:layout_weight="0.5"
        	android:src="@drawable/contact_us"
        	android:visibility="gone"
         />
 
  </TableRow>
 
 <TableRow >
             <TextView       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Customer Email Id"
            android:textSize="13sp"
            android:textColor="@android:color/black"   
            android:layout_weight="0.5"    	 	        
         />

 <TextView
        android:id="@+id/txtcustemail"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:gravity="left"
            android:textSize="13sp"
            android:textColor="@android:color/black"       	 	        
        	android:layout_weight="0.5"
         />
 
  <ImageView
        android:id="@+id/imgemail_c"
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:gravity="left"                           	 	       
        	android:layout_weight="0.5"
        	android:src="@drawable/email_c"
        	android:visibility="gone"
         />
 
  </TableRow>
</TableLayout>
</LinearLayout>