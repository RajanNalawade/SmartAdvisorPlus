<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Black"
        android:text="Upload All Documents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/txt_upload_all_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note : "
            android:textStyle="bold"
            android:layout_weight="6"
            android:layout_gravity="center"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.You can upload requirement documents through capture or browse against Proposal/Form Number."
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:textColor="@color/Black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.You can upload any document of Connect-life, Parivartan, Rinraksha by simply entering Proposal/Form Number."
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="@color/Black"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_upload_all_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:hint="Enter Proposal No."
            android:inputType="textCapCharacters"
            android:background="@drawable/edittext_dob_shape"
            android:maxLength="10"
            android:textColor="#000000"
            android:padding="5dp" />

        <ImageButton
            android:id="@+id/ib_upload_all_docs_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@color/White"
            android:padding="5dp"
            android:layout_gravity="center"
            android:src="@drawable/preview" />

        <ImageButton
            android:id="@+id/ib_upload_all_docs_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@android:color/white"
            android:padding="5dp"
            android:src="@drawable/ibtn_camera" />

        <ImageButton
            android:id="@+id/ib_upload_all_docs_browse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@android:color/white"
            android:padding="5dp"
            android:src="@drawable/ibtn_browsedoc" />

        <ImageButton
            android:id="@+id/ib_upload_all_docs_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@android:color/white"
            android:padding="5dp"
            android:clickable="true"
            android:src="@drawable/ibtn_uploaddoc" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>