<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeaderName_wv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtHeaderUIN_wv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txtHeaderPCode_wv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutBrochure"
        android:layout_width="match_parent"
        android:background="@color/WhiteSmoke"
        android:layout_height="wrap_content">

        <Button android:id="@+id/btnBrochure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_indicator"
            android:text="Brochure"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/btnBrochurePreCalsi"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button android:id="@+id/btnBrochurePreCalsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_indicator"
            android:onClick="OnPremCalci"
            android:text="Premium Calculator"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:textStyle="bold" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/linearLayoutProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/header"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonProceed"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            style="@style/btn_default"
            android:gravity="center"
            android:text="Proceed"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>