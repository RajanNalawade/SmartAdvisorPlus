                android:background="@drawable/header"/> -->

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/proposal_no_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_proposal_no"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:editable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/account_no"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_accnt_no"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:hint="@string/hint_account_no"
				android:inputType="number"
				android:digits="0123456789"/>

			<TextView
				android:id="@+id/tv_edit_nb_fb_micr"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/micr_code_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"
				android:visibility="gone"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_micr_code"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:editable="false"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/tv_edit_nb_fb_bank_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/bank_name_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"
				android:visibility="gone"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_bank_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:editable="false"
				android:visibility="gone"/>

			<TextView
				android:id="@+id/tv_edit_nb_fb_branch_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/branch_name_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"
				android:visibility="gone"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_branch_name"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:editable="false"
				android:visibility="gone"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/cheque_no"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_cheque_no"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:hint="@string/hint_cheque_no"
				android:inputType="number"
				android:maxLength="30"
				android:digits="0123456789"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/cheque_date"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_cheque_date"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:inputType="date"
				android:clickable="true"
				android:hint="@string/hint_cheque_date"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/cheque_amount_wihout_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_cheque_amt"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:editable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pay_mode_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_pay_mode"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:editable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/pay_type_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_pay_type"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:editable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/payment_type_without_asterisk"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_payment_type"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:editable="false"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/alt_mob_no"
				android:textColor="#000000"
				android:layout_marginTop="5dp"/>
			<EditText
				android:id="@+id/et_edit_nb_fp_altr_mob_no"
				android:layout_width="fill_parent"
				android:layout_height="40dp"
				android:paddingLeft="4dp"
				android:background="@drawable/my_bordernew1"
				android:inputType="phone"
				android:hint="@string/hint_altr_mobile_no"
				android:maxLength="10"
				android:digits="0123456789"/>

