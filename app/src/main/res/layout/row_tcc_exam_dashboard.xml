<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/txt_tcc_URN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/tv_default"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:text="1"
        android:padding="10dp"
        android:layout_weight="1"/>

    <TextView android:id="@+id/txt_tcc_existing_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        style="@style/tv_default"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:text="1"
        android:layout_weight="1"/>

    <TextView android:id="@+id/txt_tcc_Centre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/tv_default"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:text="1"
        android:padding="10dp"
        android:layout_weight="1"/>


    <TextView android:id="@+id/txt_tcc_ExamDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        style="@style/tv_default"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:text="1"
        android:layout_weight="1"/>

    <!--<TextView android:id="@+id/txt_tcc_SynchStatus"
