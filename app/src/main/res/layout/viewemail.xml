<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/window_title"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:overScrollMode="always">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Type"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/txtemailtype"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/shape"
                    android:enabled="false"
                    android:layout_weight="0.5"/>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="0.5"
                    android:text="Email Id"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium" />


                <EditText
                    android:id="@+id/edEmailId"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_weight="0.5">

                </EditText>



            </TableRow>

            <TableRow
                android:id="@+id/tableRow18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:id="@+id/btnupdatemail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_indicator"
                    android:textColor="@android:color/white"
                    android:text="Update"
                    android:onClick="btn_updateEmail"
                    />




                <Button
                    android:id="@+id/btnCancelemail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_indicator"
                    android:textColor="@android:color/white"
                    android:text="Cancel"
                    android:onClick="btn_cancelEmail"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
